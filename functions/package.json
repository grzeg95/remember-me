{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy:dev": "firebase use dev && firebase deploy --only functions",
    "deploy:prod": "firebase use default && firebase deploy --only functions:deleteTask,functions:saveTask,functions:setTimesOfDayOrder",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/firestore": "^3.7.4",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.6.0",
    "firebase-tools": "^7.15.1"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.1.6",
    "tslint": "^5.12.0",
    "typescript": "^3.8.2"
  },
  "private": true
}
